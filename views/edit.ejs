<h1>EDit page</h1>
<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">
    Edit
  </div>

   <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST"> <!--METHOD OVERRIDE  -->

    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title%>">
    </div>

    <div class="field">
      <label>Image url</label>
      <input type="text" name="blog[image]" value="<%= blog.image%>">
    </div>

    <div class="field">
      <label>Blog</label>
      <textarea name="blog[body]" rows="8" cols="80"> <%= blog.body%> </textarea>
    </div>

    <input type="submit" class="ui violet basic button">
    
  </form>
</div>


<% include partials/footer %>
